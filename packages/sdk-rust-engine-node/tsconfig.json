{
	"include": ["src/**/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["ESNext"],
		"module": "Node16",
		"moduleResolution": "Node16",
		"target": "ES2022",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true
	}
}
