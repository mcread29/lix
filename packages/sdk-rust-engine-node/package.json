{
	"name": "@lix-js/sdk-rust-engine-node",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"version": "0.0.1",
	"license": "Apache-2.0",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js"
	},
	"scripts": {
		"build": "cargo build --manifest-path native/lix-engine/Cargo.toml --release && tsc --build",
		"test": "cargo test --manifest-path native/lix-engine/Cargo.toml && cargo build --manifest-path native/lix-engine/Cargo.toml && tsc --noEmit && vitest run",
		"test:watch": "vitest",
		"lint": "tsc --noEmit",
		"format": "prettier ./src --write"
	},
	"sideEffects": false,
	"devDependencies": {
		"prettier": "^3.3.3",
		"typescript": "^5.5.4",
		"vitest": "^3.2.4"
	}
}
